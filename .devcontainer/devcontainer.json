{
    "name": "ROS2 Humble Development",
    "image": "osrf/ros:humble-desktop",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "automatic",
            "upgradePackages": "true"
        }
    },
    "runArgs": [
        "--privileged",
        "--net=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y ros-humble-gazebo-* ros-humble-turtlebot3 ros-humble-turtlebot3-msgs ros-humble-dynamixel-sdk libasound2 libasound2-plugins alsa-utils",
    "remoteUser": "vscode",
    "settings": {
        "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "bash"
            }
        }
    },
    "containerEnv": {
        "DISPLAY": ":1",
        "ROS_DISTRO": "humble",
        "TURTLEBOT3_MODEL": "waffle_pi"
    }
}